extends layout

block content
  .row(hidden)
    .col-md-12.text-center
      img(src="images/art.png")
      p.lead
        | Are you a dreamer? <br>Join and wait your onewheel with us 
  .row 
    div.col-md-1(hidden)
      .btn.btn-default.user-circle
        span
          | You
    div.col-md-12
      if user
        a.btn.btn-default.me.user-circle(style={ "background": "url(" + user.profile.picture + ")", "background-size": "cover" }, title=user.profile.name, href="/account")
      each val in users
        a.btn.btn-default.user-circle(style={ "background": `linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.45)), url(${ val.photo || val.profile.picture })`, "background-size": "cover"  }, title=val.name || val.profile.name, target='_blank')
